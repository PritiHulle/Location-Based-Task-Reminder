<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:id="@+id/ree1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ree1"
        android:background="@color/white">

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="14dp"
            android:drawableStart="@drawable/work"
            android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
            android:drawablePadding="15dp"
            android:fontFamily="sans-serif-black"
            android:padding="2dp"
            android:text="Task Based"
            android:textColor="@color/Black"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ree2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ree1"
        android:background="@color/white">

        <TextView
            android:id="@+id/time1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="14dp"
            android:drawableStart="@drawable/work"
            android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
            android:drawablePadding="15dp"
            android:fontFamily="sans-serif-black"
            android:padding="2dp"
            android:text="Location Based"
            android:textColor="@color/Black"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ree3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ree1_1"
        android:background="@color/white">

        <TextView
            android:id="@+id/time1_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="14dp"
            android:drawableStart="@drawable/work"
            android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
            android:drawablePadding="15dp"
            android:fontFamily="sans-serif-black"
            android:padding="2dp"
            android:text="Location Based History"
            android:textColor="@color/Black"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ree4"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ree1_2"
        android:background="@color/white">

        <TextView
            android:id="@+id/time1_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="14dp"
            android:drawableStart="@drawable/work"
            android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
            android:drawablePadding="15dp"
            android:fontFamily="sans-serif-black"
            android:padding="2dp"
            android:text="Location Based Complete History"
            android:textColor="@color/Black"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ree5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/ree1_3"
        android:background="@color/white">

        <TextView
            android:id="@+id/time1_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="14dp"
            android:drawableStart="@drawable/work"
            android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
            android:drawablePadding="15dp"
            android:fontFamily="sans-serif-black"
            android:padding="2dp"
            android:text="Location Based Delete History"
            android:textColor="@color/Black"
            android:textSize="16sp" />
    </LinearLayout>


</LinearLayout>
